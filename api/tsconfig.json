{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES6", "DOM"],
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./build",
    "typeRoots": ["./types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}